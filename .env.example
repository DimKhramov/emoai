# Telegram Bot Configuration
TELEGRAM_API_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30.0

# Scheduler Configuration
REMINDER_HOUR=10
REMINDER_MINUTE=0
ENABLE_DAILY_REMINDERS=true
TIMEZONE=Europe/Moscow

# Advanced Scheduler Configuration
RENEWAL_REMINDER_HOUR=11
RENEWAL_REMINDER_MINUTE=0
AUTO_RENEWAL_HOUR=12
AUTO_RENEWAL_MINUTE=0

# Limits Configuration
DAILY_MESSAGE_LIMIT=10
DEFAULT_SUBSCRIPTION_DAYS=30

# Premium Configuration
PREMIUM_DAILY_STARS=10
PREMIUM_DAILY_DAYS=1
PREMIUM_WEEKLY_STARS=30
PREMIUM_WEEKLY_DAYS=7
PREMIUM_MONTHLY_STARS=100
PREMIUM_MONTHLY_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Database Configuration (optional, defaults to database.sqlite)
DB_PATH=database.sqlite